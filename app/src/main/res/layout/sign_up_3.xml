<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="43dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_chevron_left" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_account"
        android:textColor="@color/text"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="20sp"
        android:layout_marginEnd="34dp"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgBack"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgProfile"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:srcCompat="@drawable/profile"
        app:shapeAppearanceOverlay="@style/CircleImage" />

    <ImageView
        android:id="@+id/imgProfilePlus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/profile_plus"
        app:layout_constraintEnd_toEndOf="@+id/imgProfile"
        app:layout_constraintBottom_toBottomOf="@+id/imgProfile" />


    <TextView
        android:id="@+id/tvPhotoDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photo_description"
        android:fontFamily="@font/montserrat_regular"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/text"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProfilePlus" />

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhotoDescription">

        <TextView
            android:id="@+id/tvLicense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/driver_license_number"
            android:textColor="@color/label"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ilLicense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="outline"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/border"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ilEditLicense"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingHorizontal="14dp"
                android:paddingVertical="0dp"
                android:hint="@string/enter_drivers_license"
                android:inputType="text"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:textColorHint="@color/light_grey" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/driver_license_date"
            android:textColor="@color/label"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ilDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="outline"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/border"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:startIconDrawable="@drawable/ic_calendar"
            app:startIconTint="@color/light_grey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ilEditDate"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingHorizontal="14dp"
                android:paddingVertical="0dp"
                android:hint="@string/enter_birth_day"
                android:inputType="none"
                android:focusable="false"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="16sp"
                android:textColor="@color/text"
                android:textColorHint="@color/light_grey" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvLicenseUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/driver_license_upload"
            android:textColor="@color/label"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/llUploadLicense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivLicense"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                app:srcCompat="@drawable/upload" />

            <TextView
                android:id="@+id/tvUploadLicense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_photo"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/label"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/textViewPassUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/upload_passport"
            android:textColor="@color/label"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <LinearLayout
            android:id="@+id/llUploadPassport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivPossport"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                app:srcCompat="@drawable/upload" />

            <TextView
                android:id="@+id/tvUploadPassport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_photo"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/label"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                />
        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:backgroundTint="@color/purple"
        android:fontFamily="@font/montserrat_regular"
        android:paddingHorizontal="32dp"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>