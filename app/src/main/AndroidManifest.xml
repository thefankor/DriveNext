<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DriveNextApp">
        <activity
            android:name=".NoConnectionActivity"
            android:exported="false"
            android:label="@string/title_activity_no_connection"
            android:theme="@style/Theme.DriveNextApp" />
        <activity
            android:name=".presentation.auth.signup.SignUpSuccessActivity"
            android:exported="false"
            android:label="@string/title_activity_sign_up_success"
            android:theme="@style/Theme.DriveNextApp" />
        <activity
            android:name=".presentation.auth.signup.SignUp3Activity"
            android:exported="false"
            android:label="@string/title_activity_sign_up3"
            android:theme="@style/Theme.DriveNextApp" />
        <activity
            android:name=".presentation.auth.signup.SignUp2Activity"
            android:exported="false"
            android:label="@string/title_activity_sign_up2"
            android:theme="@style/Theme.DriveNextApp" />
        <activity
            android:name=".presentation.auth.signup.SignUp1Activity"
            android:exported="false"
            android:label="@string/title_activity_sign_up1"
            android:theme="@style/Theme.DriveNextApp" />
        <activity
            android:name=".TestActivity"
            android:exported="false"
            android:label="@string/title_activity_test"
            android:theme="@style/Theme.DriveNextApp" />
        <activity
            android:name=".TextActivity"
            android:exported="false"
            android:label="@string/title_activity_text"
            android:theme="@style/Theme.DriveNextApp" />
        <activity
            android:name=".OnboardingActivity"
            android:exported="false"
            android:label="@string/title_activity_onboarding"
            android:theme="@style/Theme.DriveNextApp" />
        <activity
            android:name=".LoadingActivity"
            android:exported="true"
            android:label="@string/title_activity_loading"
            android:theme="@style/Theme.DriveNextApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.auth.login.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.DriveNextApp" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>